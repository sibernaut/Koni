<Application x:Class="Koni.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Koni.WPF"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="WindowBg" Color="#f3f3f3"/>
        <Style x:Key="StackPanelDialog" TargetType="{x:Type StackPanel}">
            <Setter Property="Margin" Value="12,0"/>
        </Style>
        <Style x:Key="ButtonGrid" TargetType="{x:Type Grid}">
            <Setter Property="Margin" Value="9,3"/>
            <Style.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="3"/>
                    <Setter Property="Height" Value="24"/>
                    <Setter Property="MinWidth" Value="72"/>
                    <Style.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Style.Resources>
                </Style>
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>
