<Application x:Class="Koni.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Koni.WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Toolbar" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="3"/>
        </Style>
        <Style x:Key="Edit" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Padding" Value="12,1"/>
            <Setter Property="Margin" Value="3,6,0,12"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        
    </Application.Resources>
</Application>
